<div class="jumbotron", style="background-color: #FDCD59">
<%= form_with(model: @todo, local:true) do |f| %>

    <h2>Ingresa un nuevo ToDo: </h2>

        <div class="form-group">
            <%= f.label 'Descripcion:'%>
            <%= f.text_field :description%>
        </div>

        <div class="form-group">
            <%= f.label 'Terminada?:' %>
            <%= f.check_box :completed %>
        </div>

        <div class="form-group">
            <%= f.submit :Enviar %>
        </div>
<% end %>
</div>